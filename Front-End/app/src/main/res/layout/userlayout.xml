<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subBackground">

    <TextView
        android:id="@+id/storeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userStoreTitle"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cart"
        android:layout_width="157dp"
        android:layout_height="47dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/button"
        android:onClick="viewCart"
        android:text="@string/myCart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/view_profile"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/button"
        android:text="@string/ViewProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1135" />

    <EditText
        android:id="@+id/searchItem"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:width="290dp"
        android:hint="@string/searchInventory"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@id/searchItemButton"
        app:layout_constraintTop_toBottomOf="@id/cart" />

    <Button
        android:id="@+id/searchItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/button"
        android:text="@string/searchButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/searchItem"
        app:layout_constraintStart_toEndOf="@id/searchItem"
        app:layout_constraintTop_toBottomOf="@id/cart" />


    <TextView
        android:id="@+id/itemOneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemName"
        android:textColor="@color/textColour"
        app:layout_constraintTop_toBottomOf="@+id/searchItem" />

    <TextView
        android:id="@+id/itemOnePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemPrice"
        android:textColor="@color/textColour"
        app:layout_constraintStart_toEndOf="@+id/itemOneName"
        app:layout_constraintTop_toBottomOf="@+id/searchItem"/>

    <TextView
        android:id="@+id/itemTwoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemName"
        android:textColor="@color/textColour"
        app:layout_constraintTop_toBottomOf="@+id/itemOneName" />

    <TextView
        android:id="@+id/itemTwoPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemPrice"
        android:textColor="@color/textColour"
        app:layout_constraintStart_toEndOf="@+id/itemTwoName"
        app:layout_constraintTop_toBottomOf="@+id/itemOnePrice" />

    <TextView
        android:id="@+id/itemThreeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemName"
        android:textColor="@color/textColour"
        app:layout_constraintTop_toBottomOf="@+id/itemTwoName" />

    <TextView
        android:id="@+id/itemThreePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemPrice"
        android:textColor="@color/textColour"
        app:layout_constraintStart_toEndOf="@+id/itemThreeName"
        app:layout_constraintTop_toBottomOf="@+id/itemTwoPrice" />

    <TextView
        android:id="@+id/itemFourName"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="@string/itemName"
        android:textColor="@color/textColour"
        app:layout_constraintTop_toBottomOf="@+id/itemThreeName" />

    <TextView
        android:id="@+id/itemFourPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/itemPrice"
        android:textColor="@color/textColour"
        app:layout_constraintStart_toEndOf="@+id/itemFourName"
        app:layout_constraintTop_toBottomOf="@id/itemThreePrice" />


    <Button
        android:id="@+id/button4"
        android:layout_width="64dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/button"
        android:text="@string/add"
        app:layout_constraintLeft_toRightOf="@id/itemThreePrice"
        app:layout_constraintTop_toBottomOf="@id/button8"  />

    <Button
        android:id="@+id/button8"
        android:layout_width="64dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/button"
        android:text="@string/add"
        app:layout_constraintLeft_toRightOf="@id/itemFourPrice"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/button7"
        android:layout_width="64dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/button"
        android:text="@string/add"
        app:layout_constraintLeft_toRightOf="@id/itemTwoPrice"
        app:layout_constraintTop_toBottomOf="@id/button6"  />


    <Button
        android:id="@+id/button6"
        android:layout_width="64dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/button"
        android:text="@string/add"
        app:layout_constraintLeft_toRightOf="@id/itemOnePrice"
        app:layout_constraintTop_toBottomOf="@id/searchItem"  />

